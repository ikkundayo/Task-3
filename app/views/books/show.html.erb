<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <img class="attachment user profile_image fallback" src="/assets/no_image-72379a4da21cb04a58337cf92d85bc39f8d534cbc78254c2085acaca82236bfa.jpg">
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
            	  <th>name</th>
            	  <th><%= @user.name %></th>
              </tr>
              <tr>
            	  <th>introduction</th>
            	  <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
            <%= link_to "", user_path(id: current_user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_55868" %>
          </div>

          <h2 class="mt-3">New book</h2>
            <%= form_with model: @book, local:true do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title, class:"form-control book_title" %>
             </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body, class:"form-control book_body" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Create Book', class:"btn btn-success" %>
            </div>
            <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>

            <tr>
              <td>
                <a href="/users/55868">
                  <img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg">
                  <br>
                  <%= @user.name %>
                </a>
              </td>
              <td>aaa
              </td>
              <td>
                より良いコードを書くためのシンプルで実践的なテクニック。
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

